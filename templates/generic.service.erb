[Unit]
Description=Prometheus <%= @name %>
Wants=basic.target
After=basic.target network.target

[Service]
User=<%= @user %>
Group=<%= @group %>
EnvironmentFile=/etc/sysconfig/<%= @name%>
ExecStart=<%= @exporter_bin_path %> $OPTIONS

ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always

[Install]
WantedBy=multi-user.target